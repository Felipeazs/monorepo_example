{
    "name": "@monorepo/server",
    "type": "module",
    "version": "1.0.0",
    "private": true,
    "packageManager": "bun",
    "exports": {
        "./routes": "./src/routes/index.ts"
    },
    "main": "src/index.ts",
    "scripts": {
        "start": "bun src/index.ts",
