        "hono": "^4.7.2",
        "hono-pino": "^0.7.2",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^22.13.9",
        "eslint": "^9.17.0",
        "eslint-plugin-format": "^0.1.3",
        "tsx": "^4.19.3",
        "vite": "^6.2.0"
    }
